{
  "name": "ray-browser-extension",
  "version": "1.0.0",
  "description": "AI-powered browser automation assistant",
  "type": "module",
  "main": "background/background.js",
  "scripts": {
    "build": "wxt build",
    "build:firefox": "wxt build --browser firefox",
    "dev": "wxt",
    "dev:firefox": "wxt --browser firefox",
    "postinstall": "wxt prepare",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "test": "node test/scripts/run-all-tests.js",
    "test:unit": "node test/scripts/run-all-tests.js unit",
    "test:integration": "node test/scripts/run-all-tests.js integration",
    "test:e2e": "node test/scripts/run-all-tests.js e2e",
    "test:security": "node test/scripts/run-all-tests.js security",
    "test:performance": "node test/scripts/run-all-tests.js performance",
    "test:browser": "node test/scripts/run-all-tests.js browser",
    "test:coverage": "node test/scripts/coverage-report.js",
    "test:performance-benchmarks": "node test/scripts/performance-benchmarks.js",
    "test:security-scan": "node test/scripts/security-scan.js",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:security && npm run test:performance && npm run test:browser",
    "test:verify": "node test/scripts/verify-tests.js",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "clean": "rimraf dist"
  },
  "keywords": [
    "chrome-extension",
    "browser-extension",
    "ai",
    "automation",
    "wxt",
    "openrouter",
    "ray"
  ],
  "author": "Ray Team",
  "license": "MIT",
  "dependencies": {
    "wxt": "^0.17.6",
    "crypto-js": "^4.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@types/chrome": "^0.0.246",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.3.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "babel-jest": "^29.5.0",
    "babel-loader": "^9.1.0",
    "eslint": "^8.56.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-html-reporters": "^3.1.5",
    "jsdom": "^22.1.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/test/setup/test-config.js"],
    "collectCoverageFrom": [
      "**/*.{js,ts}",
      "!**/*.d.ts",
      "!**/*.test.{js,ts}",
      "!**/__tests__/**",
      "!node_modules/**",
      "!test/**",
      "!wxt-output/**",
      "!dist/**"
    ],
    "coverageDirectory": "test/coverage",
    "coverageReporters": ["text", "lcov", "html", "json"],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true,
      "webextensions": true
    },
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "warn",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-empty-function": "off"
    }
  }
}
